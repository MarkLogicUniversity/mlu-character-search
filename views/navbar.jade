.navbar.navbar-default.navbar-fixed-top(role='navigation', ng-controller='NavController')
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Star Wars
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(ng-class='isActive("")')
          a(href='#') Home
        li(ng-class='isActive("characters")')
          a(href='#/characters') Characters
        li(ng-class='isActive("search")')
          a(href='#/search') Search
      ul.nav.navbar-nav.navbar-right
        li
          a.btn.btn-success(role='button', ng-click='toggleDebug(debug)', ng-show='!debug.state') {{ debug.text }}
          a.btn.btn-danger(role='button', ng-click='toggleDebug(debug)', ng-show='debug.state') {{ debug.text }}