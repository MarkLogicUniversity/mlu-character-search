.navbar.navbar-default.navbar-fixed-top(role='navigation', ng-controller='NavigationController as vm')
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#') Star Wars
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(ng-class='vm.isActive("")')
          a(href='#') Home
        li(ng-class='vm.isActive("characters")')
          a(href='#/characters') Characters
        li(ng-class='vm.isActive("search")')
          a(href='#/search') Search
